{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++ project",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "make"
    },
    {
      "label": "Build & run C++ project",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "command": "make",
      "args": ["run"]
    },
    {
      "type": "msbuild",
      "problemMatcher": ["$msCompile"],
      "group": "build",
      "label": "Build: DeDuBa.csproj",
      "detail": "Build the DeDuBa.csproj project using dotnet build"
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "${workspaceFolder}/DeDuBa/DeDuBa.csproj"],
      "options": {
        "env": {
          "DOTNET_ROOT": "${env:HOME}/.dotnet",
          "PATH": "${env:HOME}/.dotnet:${env:PATH}"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile",
      "detail": "Build the DeDuBa.csproj project using dotnet build"
    },
    {
      "label": "Docs: Doxygen (C++)",
      "type": "shell",
      "command": "doxygen",
      "args": ["${workspaceFolder}/docs/Doxyfile"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Docs: DocFX site (C#)",
      "type": "shell",
      "command": "docfx",
      "args": ["${workspaceFolder}/docs/docfx.json"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Docs: Generate all (Doxygen + DocFX)",
      "type": "shell",
      "command": "bash",
      "args": ["-lc", "${workspaceFolder}/generate-docs.sh"],
      "group": "build",
      "problemMatcher": []
    }
  ]
}
